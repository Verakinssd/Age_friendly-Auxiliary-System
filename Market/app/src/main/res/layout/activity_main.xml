<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <EditText
        android:id="@+id/inputUserName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="40dp"
        android:drawablePadding="15dp"
        android:hint="请输入用户名"
        android:textColorHint="#A1A1A1" />

    <ImageView
        android:id="@+id/buaa_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北航跳蚤市场登录"
        android:layout_below="@id/buaa_logo"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/title"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/inputUserName"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp"
        android:layout_marginRight="40dp"
        android:drawablePadding="15dp"
        android:hint="请输入密码"
        android:textColorHint="#A1A1A1"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/inputPassword"
        android:layout_marginTop="25dp"
        android:background="@color/yellow"
        android:text="登   录"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="520dp"
        android:src="@drawable/logingif" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/text_noacount"
            android:text="没有账号？"
            android:textSize="13dp"
            android:textColor="#A1A1A1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/text_register"
            android:text="点击注册"
            android:textSize="13dp"
            android:textColor="#7A94E6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/text_noacount"
            />

    </RelativeLayout>


</RelativeLayout>