<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 功能选项 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_marginTop="16dp">

                <!-- 个人信息 -->
                <RelativeLayout
                    android:id="@+id/personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground">


                    <TextView
                        android:id="@+id/personal_info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人信息"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/personal_info_collect_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个人信息收集清单"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground">


                    <TextView
                        android:id="@+id/privacy_policy_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="隐私政策摘要"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp" />

                </RelativeLayout>

                <!-- 设置 -->
                <RelativeLayout
                    android:id="@+id/about_developer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground">


                    <TextView
                        android:id="@+id/developer_news_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关于开发者"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp" />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/relative_back"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_marginTop="14dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="返回"
                    android:textColor="#FFcc00"
                    android:textSize="19dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_exit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_marginTop="14dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="退出登录"
                    android:textColor="#e63c32"
                    android:textSize="19dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>
