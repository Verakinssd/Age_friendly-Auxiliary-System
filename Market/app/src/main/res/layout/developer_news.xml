<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <ImageView
        android:id="@+id/developer1_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/maxwell"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/developer1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MaxWell"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/developer1_image"
        app:layout_constraintTop_toTopOf="@id/developer1_image"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/developer1_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: 22373458@buaa.edu.cn"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/developer1_image"
        app:layout_constraintTop_toBottomOf="@id/developer1_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/developer2_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/wangpeng"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/developer1_image"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/developer2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WangPeng"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/developer2_image"
        app:layout_constraintTop_toTopOf="@id/developer2_image"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/developer2_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: 22371103@buaa.edu.cn"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/developer2_image"
        app:layout_constraintTop_toBottomOf="@id/developer2_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/developer3_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/fei"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/developer2_image"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/developer3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GodFei"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/developer3_image"
        app:layout_constraintTop_toTopOf="@id/developer3_image"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/developer3_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: 22373462@buaa.edu.cn"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/developer3_image"
        app:layout_constraintTop_toBottomOf="@id/developer3_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/developer4_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/stefan"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/developer3_image"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/developer4_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stefan"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/developer4_image"
        app:layout_constraintTop_toTopOf="@id/developer4_image"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/developer4_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: 22373468@buaa.edu.cn"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/developer4_image"
        app:layout_constraintTop_toBottomOf="@id/developer4_name"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/agree_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:backgroundTint="#4CAF50"
        android:text="好的"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/developer4_email" />

</androidx.constraintlayout.widget.ConstraintLayout>
