<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:elevation="2dp"
    android:layout_marginBottom="8dp">

    <!-- 收藏图片 -->
    <ImageView
        android:id="@+id/favorite_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_favorite_placeholder"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />

    <!-- 收藏标题 -->
    <TextView
        android:id="@+id/favorite_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏标题"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/favorite_image"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- 收藏描述 -->
    <TextView
        android:id="@+id/favorite_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏描述"
        android:textSize="14sp"
        android:textColor="#777777"
        android:layout_toRightOf="@id/favorite_image"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/favorite_item_title"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- 收藏日期 -->
    <TextView
        android:id="@+id/favorite_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收藏日期"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/favorite_image" />
</RelativeLayout>
