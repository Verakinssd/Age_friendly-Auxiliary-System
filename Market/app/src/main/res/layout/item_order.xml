<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:layout_marginBottom="8dp">

    <!-- 订单图片 -->
    <ImageView
        android:id="@+id/order_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_order_placeholder"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" />

    <!-- 订单标题 -->
    <TextView
        android:id="@+id/order_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单标题"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/order_image"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:ellipsize="end" />

    <!-- 订单状态 -->

    <!-- 订单价格 -->
    <TextView
        android:id="@+id/order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_title"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/order_image"
        android:text="订单状态"
        android:textColor="#999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/order_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_title"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="-23dp"
        android:layout_toRightOf="@id/order_image"
        android:text="x1"
        android:textColor="#999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="¥123.00"
        android:textColor="#FF0000"
        android:textSize="16sp" />

    <Button
        android:backgroundTint="@color/yellow"
        android:id="@+id/add_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/order_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="101dp"
        android:layout_marginBottom="-81dp"
        android:text="评价"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/del_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/order_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-81dp"
        android:backgroundTint="@color/yellow"
        android:text="删除"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <Button
        android:backgroundTint="@color/yellow"
        android:id="@+id/confirm_receipt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/order_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="101dp"
        android:layout_marginBottom="-81dp"
        android:text="确认收货"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:visibility="gone" />


</RelativeLayout>
